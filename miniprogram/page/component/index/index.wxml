  <swiper class="swiperitem  solid-bottom" vertical="true" circular="true" bindchange="lineschange" autoplay="true">
    <block wx:for="{{Headlines}}" wx:key="item.id">
      <swiper-item bindtap="linesclick" item-id="item.id">
        <view class="cu-bar bg-white">
          <view class='action'>
            <text class='cuIcon-title text-green'></text>
            <text>公告：{{item.title}}</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>

